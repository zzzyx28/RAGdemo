{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  // 关键：包含所有 Vue/TS 源码文件（确保 TS 能识别你的组件）
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue", // 必须包含 .vue 文件！
    "src/env.d.ts" // Vue 项目默认的环境声明文件
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
  
}
